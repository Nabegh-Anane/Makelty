<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">


    <TextView
    android:id="@+id/textHome"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="1143dp"
        android:layout_height="208dp"
        android:src="@drawable/kosksiblhout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/textView4"
        style="@style/viewParent.headerText"
        android:layout_width="378dp"
        android:layout_height="76dp"
        android:gravity="center"
        android:text="voir les repas de la semaine crées par les chefs par les ingrédients disponibles éviter la confusion et préparer des repas satisfaisants sans avoir à consacrer du temps supplémentaire à la planification et aux courses."
        android:textColor="#5D5C5C"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.845" />

    <TextView
        style="@style/headerTextPrimary"
        android:layout_width="339dp"
        android:layout_height="38dp"
        android:text="Voir Les Plats et Menus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.721" />

    <Button
        android:id="@+id/creation"
        android:layout_width="171dp"
        android:layout_height="51dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/creer_mon_plat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.617" />

    <TextView
        style="@style/viewParent.headerText"
        android:layout_width="378dp"
        android:layout_height="76dp"
        android:gravity="center"
        android:text="planifier les repas de la semaine en utilisant les ingrédients disponibles éviter la confusion et préparer des repas satisfaisants sans avoir à consacrer du temps supplémentaire à la planification et aux courses."
        android:textColor="#5D5C5C"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497" />

    <TextView
        style="@style/headerTextPrimary"
        android:layout_width="339dp"
        android:layout_height="38dp"
        android:text="Creer Votre Propre Plat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.393" />

    <Button
        android:id="@+id/creation2"
        android:layout_width="171dp"
        android:layout_height="51dp"
        android:layout_gravity="center_horizontal"
        android:text="Voir Les Menus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.948" />

</androidx.constraintlayout.widget.ConstraintLayout>
